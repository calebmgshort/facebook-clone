<div class="content">
  <h2>Log in</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "For a demo, try: email: 'example@example.example', password: 'example'. Or sign up." %>
  </div>

  <div class="field">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
  </div>

  <% if false %>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
